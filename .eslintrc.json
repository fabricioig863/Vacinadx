{
  "env": {
      "es2021": true
  },
  "globals": {
    "_DEV_": "readonly"
  },
  "extends": [
      "plugin:react/recommended",
      "standard-with-typescript",
      "plugin:@typescript-eslint/recommend"
  ],
  "overrides": [
  ],
  "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
  },
  "plugins": [
      "react",
      "react-hooks"
  ],
  "rules": {
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "react/jsx-filename-extension": [1,{ "extension" : [".tsx"] }],
    "import/prefer-default-export": "off",
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "ts": "never",
        "tsx": "never"
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "typescript": {},
      "babel-plugin-root-import": {
        "rootPathPrefix": "@/",
        "rootPathSuffix": "src"
      }
    }
  }
}
